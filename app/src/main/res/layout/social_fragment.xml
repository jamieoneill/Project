<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <RelativeLayout
        android:id="@+id/findLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/findBtn"
            android:layout_width="@dimen/social_image"
            android:layout_height="@dimen/social_image"
            android:background="@drawable/find_a_meet" />

        <TextView
            android:id="@+id/findText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/findBtn"
            android:layout_centerHorizontal="true"
            android:text="@string/findMeetUp"
            android:textColor="@color/Black"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/findLayout"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/middleLayout">

    <RelativeLayout
        android:id="@+id/addLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        >

        <ImageButton
            android:id="@+id/addBtn"
            android:layout_width="@dimen/social_image"
            android:layout_height="@dimen/social_image"
            android:background="@drawable/add_a_meet"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/addText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addBtn"
            android:layout_centerHorizontal="true"
            android:text="@string/addMeetUp"
            android:textColor="@color/Black"
            android:textStyle="bold" />

    </RelativeLayout>

        <RelativeLayout
        android:id="@+id/manageLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="20dp">

        <ImageButton
            android:id="@+id/manageBtn"
            android:layout_width="@dimen/social_image"
            android:layout_height="@dimen/social_image"
            android:layout_centerHorizontal="true"
            android:background="@drawable/manage_a_meet" />

        <TextView
            android:id="@+id/manageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/manageBtn"
            android:layout_centerHorizontal="true"
            android:text="@string/manageMeetUp"
            android:textColor="@color/Black"
            android:textStyle="bold" />

    </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nextLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/middleLayout"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/nextLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="My next Meet up:"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/flagImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/meetupTitleLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/meetupTimeLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/meetupDateLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/meetupLocationLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/Black" />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LayoutWrapper">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/myMeetUpLayout">

    <TextView
        android:text="My Meet ups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myMeetUpLable"
        android:textColor="?attr/editTextColor"
        android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/attendingMeetUpLayout">

    <TextView
        android:text="Attending Meet ups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/attendingMeetupLable"
        android:textColor="?attr/editTextColor"
        android:textSize="20sp" />
    </LinearLayout>


    </LinearLayout>
</ScrollView>
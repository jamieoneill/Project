<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ProfilePic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ProfilePic"
                android:text="@string/nameLable"
                android:layout_marginLeft="5dp"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/levelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTextView"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ProfilePic"
                android:text="@string/Level"
                android:textColor="@color/Black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/levelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/levelTextView"
                android:layout_toRightOf="@+id/ProfilePic"
                android:textColor="@color/Black"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/Gray"
                android:layout_below="@+id/levelText"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/AchievementsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Achievements"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/CompleteYourFirstLesson"
                android:layout_width="@dimen/achievements_size"
                android:layout_height="@dimen/achievements_size"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/achievements_dark_completeyourfirstlesson" />

            <ImageView
                android:id="@+id/ReachLevel5"
                android:layout_width="@dimen/achievements_size"
                android:layout_height="@dimen/achievements_size"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/achievements_dark_reachlevel5" />

            <ImageView
                android:id="@+id/MasterALanguage"
                android:layout_width="@dimen/achievements_size"
                android:layout_height="@dimen/achievements_size"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/achievements_dark_masteralanguage" />

            <ImageView
                android:id="@+id/Attend3MeetUps"
                android:layout_width="@dimen/achievements_size"
                android:layout_height="@dimen/achievements_size"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/achievements_dark_attend3meetups" />

            <ImageView
                android:id="@+id/Attend10MeetUps"
                android:layout_width="@dimen/achievements_size"
                android:layout_height="@dimen/achievements_size"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/achievements_dark_attend10meetups" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/CompleteALessonAfter11"
                android:layout_width="@dimen/achievements_size"
                android:layout_height="@dimen/achievements_size"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/achievements_dark_completealessonafter11" />

            <ImageView
                android:id="@+id/TryMoreThanOneLanguage"
                android:layout_width="@dimen/achievements_size"
                android:layout_height="@dimen/achievements_size"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/achievements_dark_trymorethanonelanguage" />

            <ImageView
                android:id="@+id/AddAFriend"
                android:layout_width="@dimen/achievements_size"
                android:layout_height="@dimen/achievements_size"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/achievements_dark_addafriend" />

            <ImageView
                android:id="@+id/UseTheTranslator"
                android:layout_width="@dimen/achievements_size"
                android:layout_height="@dimen/achievements_size"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/achievements_dark_usethetranslator" />

            <ImageView
                android:id="@+id/CompleteALessonBefore8"
                android:layout_width="@dimen/achievements_size"
                android:layout_height="@dimen/achievements_size"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/achievements_dark_completealessonbefore8" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/Gray"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/ChangePhotoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp">

            <ImageButton
                android:id="@+id/ChangePhotoButton"
                android:layout_width="@dimen/social_image"
                android:layout_height="@dimen/social_image"
                android:background="@drawable/change_photo"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/ChangePhotoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ChangePhotoButton"
                android:layout_centerHorizontal="true"
                android:text="@string/ChangeProfilePicture"
                android:textColor="@color/Black"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TranslateActivityLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="20dp">

            <ImageButton
                android:id="@+id/TranslateActivityButton"
                android:layout_width="@dimen/social_image"
                android:layout_height="@dimen/social_image"
                android:background="@drawable/translate_image"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/TranslateActivityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TranslateActivityButton"
                android:layout_centerHorizontal="true"
                android:text="@string/translateLabel"
                android:textColor="@color/Black"
                android:textStyle="bold" />
        </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/ChangeLanguageLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp">

                <ImageButton
                    android:id="@+id/ChangeLanguageButton"
                    android:layout_width="@dimen/social_image"
                    android:layout_height="@dimen/social_image"
                    android:background="@drawable/change_language"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/ChangeLanguageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ChangeLanguageButton"
                    android:layout_centerHorizontal="true"
                    android:text="@string/ChangeLanguage"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/SignOutLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="20dp">

                <ImageButton
                    android:id="@+id/SignOutButton"
                    android:layout_width="@dimen/social_image"
                    android:layout_height="@dimen/social_image"
                    android:background="@drawable/sign_out"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/SignOutText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/SignOutButton"
                    android:layout_centerHorizontal="true"
                    android:text="@string/SignOut"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/Green</item>
    </style>

    <!-- splash screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <!-- timepicker -->
    <style name="TimeTheme" parent="android:Theme.Holo.Light"></style>

    <!-- datepicker -->
    <style name="DateTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- button -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:width">200dp</item>
    </style>

    <!-- green button -->
    <style name="JoinButtonStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/Green</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:width">200dp</item>
    </style>

    <!-- red button -->
    <style name="RedButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Red</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:width">200dp</item>
    </style>

    <!-- icon button -->
    <style name="IconButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">8sp</item>
    </style>

</resources>
